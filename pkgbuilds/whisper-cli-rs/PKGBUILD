prepare() {
    cd $pkgname-$pkgver
#    echo "" >> Cargo.toml
#    echo "[profile.release]" >> Cargo.toml
#    echo "opt-level = 3" >> Cargo.toml
    cd src
#    sed -i "s:/datasets::g" model.rs
    cargo build --release
}

package() {
    cd $pkgname-$pkgver
    mkdir -p "$pkgdir/usr/bin"
    cp target/release/whisper $pkgdir/usr/bin/
}
